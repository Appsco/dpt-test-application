{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="/styles/global.css" />
    <link rel="stylesheet" href="/styles/index.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:ital,wght@0,400;0,500;0,700;1,400&display=swap"/>
{% endblock stylesheets %}

{% block javascripts %}
    {{ parent() }}
    <script rel="script" src="/js/ui.js"></script>
{% endblock javascripts %}

{% block body %}
    <div class="mainbodywindow">
        <header class="header">
            {% block header %}
                {% include 'front/header.html.twig' %}
            {% endblock %}
        </header>
        <div class="downloadtools">
            {% block downloadtools %}
                {% include 'front/download-tools.html.twig' %}
            {% endblock %}
        </div>
        <main class="bodyofsections">
            <div class="profilesection sectionContent" id="profilesection">
                {% block profilesection %}
                    {% include 'front/section-01-profile.html.twig' %}
                {% endblock %}
            </div>

            <div class="oauthsection sectionContent" id="oauthsection" hidden>
                {% block oauthsection %}
                    {% include 'front/section-02-oauth.html.twig' %}
                {% endblock %}
            </div>

            <div id="publickeysection" class="publickeysection sectionContent" hidden>
                {% block publickeysection %}
                    {% include 'front/section-03-publickey.html.twig' %}
                {% endblock %}
            </div>

            <div id="devicefeaturesection" class="devicefeaturesection sectionContent" hidden>
                {% block devicefeaturesection %}
                    {% include 'front/section-04-devicefeature.html.twig' %}
                {% endblock %}
            </div>

            <div id="verifiedauthsection" class="verifiedauthsection sectionContent" hidden>
                {% block verifiedauthsection %}
                    {% include 'front/section-05-verifiedauth.html.twig' %}
                {% endblock %}
            </div>

            <div id="datatokenfeature" class="datatokenfeature sectionContent" hidden>
                {% block datatokenfeaturesection %}
                    {% include 'front/section-06-datatokenfeature.html.twig' %}
                {% endblock %}
            </div>
            <div class="poolsection sectionContent" id="poolsection" hidden>
                {% block poolsection %}
                    {% include 'front/section-07-pool.html.twig' %}
                {% endblock %}
            </div>
        </main>
        <button class="modalopenbutton" id="modalOpenButton">
            <img class="modalopenbutton-child" alt="" src="/assets/vector-3.svg" />
            <div class="vector-wrapper">
                <img class="vector-icon1" alt="" src="/assets/vector1.svg" />
            </div>
        </button>

        <footer class="responseboxleft">
            {% block footer %}
                {% include 'front/footer.html.twig' %}
            {% endblock %}
        </footer>
    </div>

    <div id="modalPopup" class="popup-overlay" style="display: none">
        <div class="modal">
            <div class="sed-ut-perspiciatis-unde-omnis-parent">
                <div class="main-content"></div>
            </div>
            <button class="close-parent" id="popupframeButton">
                <b class="close">Close</b>
                <div class="vector-parent">
                    <img class="vector-icon" alt="" src="/assets/vector.svg" />
                    <div class="group-child"></div>
                </div></button
            ><b class="modaltitle">Result</b>
        </div>
    </div>
{% endblock %}
